{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "/usr/bin/clang++",
            "args": [
                "-c",
                "${workspaceFolder}/src/*.cpp",
                "-std=c++20",
                "-fdiagnostics-color=always",
                "-I/usr/local/include",
                "-I/opt/homebrew/Cellar/sfml/2.5.1_2/include",
                "-I${workspaceFolder}/src",
                "-o",
                "${workspaceFolder}/bin/main.o"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Link",
            "type": "shell",
            "command": "/usr/bin/clang++",
            "args": [
                "${workspaceFolder}/bin/main.o",
                "-o",
                "${workspaceFolder}/bin/main",
                "-L/usr/local/lib",
                "-L/opt/homebrew/lib",
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system",
            ],
            "dependsOn": "Build",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}