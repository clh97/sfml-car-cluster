{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++17",
                "-g",
                "-Wall",
                "-Wextra",
                "-Wformat",
                "-fdiagnostics-color=always",
                "-I/usr/local/include",
                "-I/${workspaceFolder}/src",
                "${workspaceFolder}/src/*.cpp",
                "-c",
                "-o",
                "${workspaceFolder}/bin/main.o",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Link",
            "type": "shell",
            "command": "g++",
            "args": [
                "${workspaceFolder}/bin/main.o",
                "-L/usr/local/lib",
                "-o",
                "${workspaceFolder}/bin/main",
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system",
                "-lsfml-audio",
                "-lImGui-SFML",
                "-framework",
                "OpenGL"
            ],
            "dependsOn": "Build",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}